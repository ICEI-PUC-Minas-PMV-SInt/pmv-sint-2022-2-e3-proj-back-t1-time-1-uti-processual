@model UTIProcessual.Models.NovoProcessoViewModel

@{
}

<h1>Adicionar processo</h1>

<form method="post" action="Adicionar" class="mt-5">
    <fieldset>
        <legend>1) Informações do processo</legend>
        <div class="mb-3">
            <label for="" class="form-label">Número do processo penal</label>
            <input type="number" class="form-control" asp-for="NumeroProcessoPenal">
        </div>
        <div class="mb-3">
            <label for="" class="form-label">Tipo Penal</label>
            <input type="text" class="form-control" asp-for="TipoPenal">
        </div>
    </fieldset>

    <br />

    <fieldset>
        <legend>2) Dados do crime</legend>
        <div class="mb-3">
            <label for="" class="form-label">Local do crime</label>
            <input type="text" class="form-control" asp-for="LocalDoCrime">
        </div>
        <div class="mb-3">
            <label for="" class="form-label">Data do crime</label>
            <input type="date" class="form-control" asp-for="DataDoCrime">
        </div>
        <div class="mb-3">
            <label for="" class="form-label">Nº PCNET</label>
            <input type="number" class="form-control" asp-for="NumeroPCNET">
        </div>
        <div class="mb-3">
            <label for="" class="form-label">Nº REDS</label>
            <input type="number" class="form-control" asp-for="NumeroREDS">
        </div>
        <div class="mb-3">
            <label for="" class="form-label">Nº Inquérito Policial</label>
            <input type="number" class="form-control" asp-for="NumInqueritoPolicial">
        </div>
    </fieldset>

    <br />

    <fieldset>
        <legend>3) Dados do réu</legend>
        <div class="mb-3">
            <label for="" class="form-label">Nome da pessoa</label>
            <input type="text" class="form-control" asp-for="NomeReu">
        </div>
        <div class="mb-3">
            <label for="" class="form-label">Filiação</label>
            <input type="text" class="form-control" asp-for="FiliacaoReu">
        </div>
        <div class="mb-3">
            <label for="" class="form-label">Data de Nascimento</label>
            <input type="date" class="form-control" asp-for="DataNascReu">
        </div>
        <div class="mb-3">
            <label for="" class="form-label">Naturalidade</label>
            <input type="text" class="form-control" asp-for="NaturalidadeReu">
        </div>
        <div class="mb-3">
            <label for="" class="form-label">Endereço</label>
            <input type="text" class="form-control" asp-for="EnderecoReu">
        </div>
        <div class="mb-3">
            <label for="" class="form-label">Telefone</label>
            <input type="tel" class="form-control" asp-for="TelefoneReu">
        </div>
    </fieldset>

    <br />

    <fieldset>
        <legend>4) Defesa da pessoa acusada</legend>
        <div class="mb-3">
            @*
            <div class="mb-3">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1">
                    <label class="form-check-label" for="inlineRadio1">Sim</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2">
                    <label class="form-check-label" for="inlineRadio2">Não</label>
                </div>
            </div>
            *@

            <div class="mb-3">
                <label for="" class="form-label">Advogada / Advogado</label>
                <input type="text" class="form-control" asp-for="Advogado">
            </div>

            <div class="mb-3">
                <label for="" class="form-label">Nº OAB Advogada / Advogado</label>
                <input type="text" class="form-control" asp-for="OABAdvogado">
            </div>
            <div class="mb-3">
                <label for="" class="form-label">Defensoria Pública</label>
                <input type="text" class="form-control" asp-for="DefensoriaPublica">
            </div>
        </div>
    </fieldset>

    <button type="submit" class="btn btn-primary">Cadastrar processo</button>
</form>
